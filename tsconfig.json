{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "allowJs": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "src",
    "outDir": ".server",
    "jsx": "preserve",
    "jsxFactory": "Preact.h",
    "jsxFragmentFactory": "Preact.Fragment",
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./src/typings"]
  },
  "include": ["src", "scripts"],
  "exclude": ["node_modules"]
}
